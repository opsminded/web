# GDMON Configuration
# Copy this file to .env and update with your actual values

# Environment (development, production)
APP_ENV=development

# Database
DB_PATH=../graph.db

# Authentication - Basic Auth Users
# Generate password hash with: php -r "echo password_hash('your_password', PASSWORD_DEFAULT);"
# Format: username:password_hash (one per line)
AUTH_USERS="admin:$2y$10$92IXUNpkjO0rOQ5byMi.Ye4oKoEa3Ro9llC/.og/at2.uheWG/igi"

# Authentication - Bearer Tokens
# Format: token:user_identifier (one per line, separated by newlines)
AUTH_BEARER_TOKENS="your_secure_token_here:automation_bot"

# Session Configuration
SESSION_LIFETIME=3600
SESSION_NAME=gdmon_session

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
